<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.BusController">
    <Label text="Bus Schedule and Route" />
    <HBox>
        <Label text="Bus ID:" />
        <Label fx:id="busIdLabel" />
    </HBox>
    <HBox>
        <Label text="Schedule:" />
        <Label fx:id="scheduleLabel" />
        <TextField fx:id="newScheduleField" />
    </HBox>
    <HBox>
        <Label text="Route:" />
        <Label fx:id="routeLabel" />
        <TextField fx:id="newRouteField" />
    </HBox>
    <Button text="Update Schedule" onAction="#editSchedule" />
    <Button text="Update Route" onAction="#editRoute" />
</VBox>
